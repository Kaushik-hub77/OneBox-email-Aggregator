{
  "name": "email-aggregator-backend",
  "version": "1.0.0",
  "description": "Advanced email aggregator with real-time sync and AI features",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "docker:es": "docker run -d --name elasticsearch -p 9200:9200 -e discovery.type=single-node -e xpack.security.enabled=false docker.elastic.co/elasticsearch/elasticsearch:8.11.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "imap": "^0.8.19",
    "@types/imap": "^0.8.37",
    "mailparser": "^3.6.5",
    "@elastic/elasticsearch": "^8.11.0",
    "axios": "^1.6.2",
    "openai": "^4.20.1",
    "hnswlib-node": "^1.4.2",
    "compromise": "^14.10.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.16",
    "typescript": "^5.3.2",
    "ts-node-dev": "^2.0.0"
  }
}